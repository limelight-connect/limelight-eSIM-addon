{
  "name": "eSIM Management Platform",
  "version": "1.2.0",
  "slug": "esim-platform",
  "description": "A comprehensive eSIM management system with unified Docker deployment for managing eSIM devices and profiles",
  "uart": true,
  "udev": true,
  "privileged": [
    "NET_ADMIN",
    "SYS_ADMIN"
  ],
  "url": "https://github.com/limelight-connect/limelight-eSIM-addon",
  "startup": "application",
  "hassio_api": true,
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7"
  ],
  "mounts": [
    {
      "type": "bind",
      "source": "/sys",
      "target": "/sys",
      "read_only": false
    }
  ],
  "boot": "auto",
  "init": false,
  "ingress": true,
  "ingress_port": 8080,
  "ingress_entry": "",
  "host_network": true,
  "timeout": 30,
  "panel_icon": "mdi:sim",
  "panel_title": "eSIM Platform",
  "map": [
    {
      "type": "share",
      "read_only": false
    },
    {
      "type": "config",
      "read_only": false
    },
    {
      "type": "ssl",
      "read_only": false
    },
    {
      "type": "addons",
      "read_only": false
    },
    {
      "type": "media",
      "read_only": false
    },
    {
      "type": "backup",
      "read_only": false
    }
  ],
  "devices": [
    "/dev/serial/by-id/usb-Quectel_EG25-GC-if00-port0",
    "/dev/serial/by-id/usb-Quectel_EG25-GC-if01-port0", 
    "/dev/serial/by-id/usb-Quectel_EG25-GC-if02-port0",
    "/dev/serial/by-id/usb-Quectel_EG25-GC-if03-port0",
    "/dev/cdc-wdm0"
  ],
  "options": {
    "log_level": "info",
    "timezone": "Asia/Shanghai",
    "secret_key": "",
    "debug": false,
    "allowed_hosts": "localhost,127.0.0.1,0.0.0.0",
    "cors_allowed_origins": "http://localhost,http://127.0.0.1",
    "serial_device": "/dev/serial/by-id/usb-Quectel_EG25-GC-if02-port0",
    "data_retention_days": 30,
    "max_upload_size": "50MB",
    "api_timeout": 300,
    "next_public_base_path": "",
    "next_public_api_url": "",
    "next_public_dev_api_url": "",
    "web_auth_enabled": false,
    "web_auth_username": "admin",
    "web_auth_password": ""
  },
  "schema": {
    "log_level": "str",
    "timezone": "str",
    "secret_key": "str",
    "debug": "bool",
    "allowed_hosts": "str",
    "cors_allowed_origins": "str",
    "serial_device": "str",
    "data_retention_days": "int",
    "max_upload_size": "str",
    "api_timeout": "int",
    "next_public_base_path": "str",
    "next_public_api_url": "str",
    "next_public_dev_api_url": "str",
    "web_auth_enabled": "bool",
    "web_auth_username": "str",
    "web_auth_password": "str"
  },
  "image": "ghcr.io/limelight-connect/esimaddon-{arch}"
}