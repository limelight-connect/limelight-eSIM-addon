{
  "name": "eSIM Management Platform",
  "version": "1.0.27",
  "slug": "esim-platform",
  "description": "A comprehensive eSIM management system with unified Docker deployment for managing eSIM devices and profiles",
  "uart": true,
  "udev": true,
  "url": "https://github.com/limelight-connect/limelight-eSIM-addon",
  "startup": "application",
  "hassio_api": true,
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7"
  ],
  "boot": "auto",
  "init": false,
  "ingress": true,
  "ingress_port": 80,
  "ingress_entry": "/",
  "timeout": 30,
  "panel_icon": "mdi:sim",
  "panel_title": "eSIM Platform",
  "map": [
    {
      "type": "share",
      "read_only": false
    },
    {
      "type": "config",
      "read_only": false
    },
    {
      "type": "ssl",
      "read_only": false
    },
    {
      "type": "addons",
      "read_only": false
    },
    {
      "type": "media",
      "read_only": false
    },
    {
      "type": "backup",
      "read_only": false
    }
  ],
  "devices": [
    "/dev/ttyUSB0",
    "/dev/ttyUSB1", 
    "/dev/ttyUSB2",
    "/dev/ttyUSB3"
  ],
  "options": {
    "log_level": "info",
    "timezone": "Asia/Shanghai",
    "secret_key": "",
    "debug": false,
    "allowed_hosts": "localhost,127.0.0.1,0.0.0.0",
    "cors_allowed_origins": "http://localhost,http://127.0.0.1",
    "serial_device": "/dev/ttyUSB2",
    "data_retention_days": 30,
    "max_upload_size": "50MB",
    "api_timeout": 300
  },
  "schema": {
    "log_level": "str",
    "timezone": "str",
    "secret_key": "str",
    "debug": "bool",
    "allowed_hosts": "str",
    "cors_allowed_origins": "str",
    "serial_device": "str",
    "data_retention_days": "int",
    "max_upload_size": "str",
    "api_timeout": "int"
  },
  "image": "ghcr.io/limelight-connect/esimaddon-{arch}"
}